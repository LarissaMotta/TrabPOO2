                    </tbody>
                </table>
            </div>
            <div class="col-sm-8 col-md-6 col-xl-4 col-lg-5 col-11">
                <canvas id="despesas-chart"></canvas>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/Dashboard")
    @*<script src="Chart.bundle.min.js"></script>*@
    <script>
        $GeraGraficoDoughnut({ 'id': "#despesas-chart", 'labels': ["Receitas", "Despesas", "Caixa"], 'data': [2800, 1920, 880], 'colors': ['rgba(18,187,173, 1)', 'rgba(220,53,69, 1)', 'rgba(79,112,206, 1)'] });
    </script>
}