@{
    ViewBag.Title = "Dashboard";
}

@Html.Partial("_SelecionadorMes")

<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-8 col-xl-6">
                <table class="table m-0">
                    <colgroup>
                        <col width="50%">
                        <col width="50%">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Visão Geral</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Receitas</td>
                            <td>R$ @ViewData["TotalReceita"]</td>
                        </tr>
                        <tr>
                            <td>Despesas</td>
                            <td>R$ @ViewData["TotalDespesa"]</td>
                        </tr>
                        <tr>
                            <td>Caixa</td>
                            <td>R$ @ViewData["Caixa"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-8 col-md-6 col-xl-4 col-lg-5 col-11">
                <canvas id="visao-geral-chart"></canvas>
            </div>
        </div>
    </div>
</div>
<hr>
<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-8 col-xl-6">
                <table class="table m-0">
                    <colgroup>
                        <col width="50%">
                        <col width="50%">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Receitas</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.ActionLink("Salário", "Index", "Receita", new { mes = ViewBag.MesSelecionado, ano = ViewBag.AnoSelecionado, categoria = Dominio.CategoriaReceita.Salario }, null)</td>
                            <td>R$ @ViewData["CategoriaReceitaSalario"]</td>
                        </tr>
                        <tr>
                            <td>@Html.ActionLink("Vendas", "Index", "Receita", new { mes = ViewBag.MesSelecionado, ano = ViewBag.AnoSelecionado, categoria = Dominio.CategoriaReceita.Vendas }, null)</td>
                            <td>R$ @ViewData["CategoriaReceitaVendas"]</td>
                        </tr>
                        <tr>
                            <td>@Html.ActionLink("Pensão", "Index", "Receita", new { mes = ViewBag.MesSelecionado, ano = ViewBag.AnoSelecionado, categoria = Dominio.CategoriaReceita.Pensao }, null)</td>
                            <td>R$ @ViewData["CategoriaReceitaPensao"]</td>
                        </tr>
                        <tr>
                            <td>@Html.ActionLink("Outros", "Index", "Receita", new { mes = ViewBag.MesSelecionado, ano = ViewBag.AnoSelecionado, categoria = Dominio.CategoriaReceita.Outros }, null)</td>
                            <td>R$ @ViewData["CategoriaReceitaOutros"]</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-8 col-md-6 col-xl-4 col-lg-5 col-11">
                <canvas id="receitas-chart" class=""></canvas>
            </div>
        </div>
    </div>
</div>
<hr>
<div class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-xl-6 col-lg-8">
                <table class="table m-0">
                    <colgroup>
                        <col width="50%">
                        <col width="50%">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>Despesas</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.ActionLink("Moradia", "Index", "Despesa", new { mes = ViewBag.MesSelecionado, ano = ViewBag.AnoSelecionado, categoria = Dominio.CategoriaDespesa.Moradia }, null)</td>
