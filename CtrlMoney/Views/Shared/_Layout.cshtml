<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <title>@ViewBag.Title - CtrlMoney</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class=@ViewBag.BodyClass>
    <nav class="navbar navbar-expand-md navbar-dark bg-black">
        <a class="navbar-brand" href=@Url.Action("Index","Home")>
            <i class="fa d-inline fa-lg fa-cloud"></i>
            Ctrl+Money
        </a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav w-100">
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("VisaoGeral","Dashboard")>
                        <i class="fa d-inline fa-lg fa-pie-chart"></i>&nbsp;Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index","Previsao")>
                        <i class="fa d-inline fa-lg fa-bar-chart"></i>&nbsp;Previsões
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index","FluxoCaixa")>
                        <i class="fa d-inline fa-lg fa-line-chart"></i>&nbsp;Fluxo de Caixa
                    </a>
                </li>
                <li class="nav-item mr-auto">
                    <a class="nav-link" href=@Url.Action("Index","MeusCartoes")>
                        <i class="fa d-inline fa-lg fa-credit-card"></i>&nbsp;Meus Cartões
                    </a>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li>
                        <a class="btn nav-button mt-2 mt-md-0 navbar-btn btn-light text-dark" href=@Url.Action("Logoff", "Usuarios")>
                            <i class="fa d-inline fa-lg fa-user-circle-o"></i>&nbsp;Logoff
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="btn nav-button mt-2 mt-md-0 navbar-btn btn-light text-dark" href=@Url.Action("Login", "Usuarios")>
                            <i class="fa d-inline fa-lg fa-user-circle-o"></i>&nbsp;Login
                        </a>
                    </li>
                    <li>
                        <a class="btn nav-button mt-2 mt-md-0 navbar-btn ml-md-2 btn-light text-dark" href=@Url.Action("SignIn", "Usuarios")>
                            <i class="fa d-inline fa-lg fa-sign-in"></i>&nbsp;Sign in
                        </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="content">
        <main>
            @RenderBody()
        </main>

        <footer class="bg-black text-white p-3 mt-auto">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="align-self-center">
                        <a href="https://www.facebook.com" target="_blank" class="">
                            <i class="fa fa-fw fa-facebook fa-3x text-white"></i>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-3 text-center">
                        <p>© Copyright 2018 Ctrl+Money - All rights reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
